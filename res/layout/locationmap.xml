<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/new_title_1"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/new_title_1"
            android:onClick="btClick2"
            android:src="@drawable/jindian_back"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出行推荐"
            android:textSize="22dp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:id="@+id/laihui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/new_change"
            android:layout_alignParentRight="true"
            android:onClick="btClick"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"/>
        <ImageButton
            android:id="@+id/locaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/locnomal"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="5dp"/>
        <ImageButton
            android:id="@+id/fujinButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/new_map"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="110dp"
            android:layout_marginRight="5dp"
            android:onClick="btClick1"/>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@android:color/darker_gray"
            android:alpha="0.5"
            android:layout_gravity="left">
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="left">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="目的地:"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:alpha="0.9"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:id="@+id/oritation"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="3"
                    android:background="@drawable/bound_edit"
                    android:textSize="18dp"
                    android:singleLine="true"
                    android:hint="天津站"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/white"
                    android:textCursorDrawable="@drawable/cursor"
                    android:layout_gravity="center"/>
            <ImageButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:background="@drawable/bound_voice"
                android:src="@drawable/voice"
                android:onClick="voice_loc"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp">
            <ImageButton
                android:id="@+id/transit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_bus"
                android:layout_gravity="left|center"
                android:alpha="0.8"/>
            <ImageButton
                android:id="@+id/drive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_text"
                android:layout_gravity="left|center"
                android:alpha="0.8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center">
            <Button
                android:id="@+id/pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pre_"
                android:layout_gravity="bottom|center"
                android:alpha="0.8"/>
            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/next_"
                android:layout_gravity="bottom|center"
                android:alpha="0.8"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>