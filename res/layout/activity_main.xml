<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@mipmap/title"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="2.5dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg">
        <Button
            android:id="@+id/minsu"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/minsu"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="80dp"/>
        <Button
            android:id="@+id/login_button"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="180dp"
            android:text="登录"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textColor="#ffffff"
            android:background="@mipmap/login_button"
            android:textSize="30dp" />
        <ImageButton
            android:id="@+id/xincheng_buttom"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/xincheng"
            android:layout_toRightOf="@id/login_button"
            android:layout_marginTop="215dp"
            android:layout_marginLeft="28dp">
        </ImageButton>

        <ImageButton
            android:id="@+id/huiyi_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/huiyi"
            android:layout_below="@id/login_button"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="30dp">
        </ImageButton>

        <ImageButton
            android:id="@+id/zhuce_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/zhuce"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="230dp"/>

        <ImageButton
            android:id="@+id/weather_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/weather"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="305dp"/>

        <ImageButton
            android:id="@+id/home"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/zhuye"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="315dp"/>

    </RelativeLayout>


</LinearLayout>
