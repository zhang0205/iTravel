<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/new_title_1">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="60dp"
            android:background="@drawable/new_title_1"
            android:layout_height="50dp"
            android:onClick="back_Click"
            android:src="@drawable/jindian_back"/>
        <Button
            android:id="@+id/speakthrid"
            android:layout_height="50dp"
            android:layout_width="60dp"
            android:layout_gravity="right"
            android:background="@drawable/new_title_1"
            android:text="发音人"
            android:textSize="20dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="回忆轴"
            android:textSize="25dp"
            android:textColor="@android:color/white"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/ico_0"/>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:background="@mipmap/ico_1"/>
            <ImageButton
                android:id="@+id/voicethrid"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="10dp"
                android:background="@mipmap/voice_on"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="甘肃月牙泉雪景"
                    android:layout_marginLeft="30dp"
                    android:textColor="@android:color/holo_blue_bright"
                    android:layout_marginTop="150dp"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_alignLeft="@+id/textView1"
                    android:text="2017年1月18日"
                    android:layout_below="@+id/textView1"
                    android:textSize="18dp"/>
            </RelativeLayout>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>